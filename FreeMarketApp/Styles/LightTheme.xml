<Styles xmlns = "https://github.com/avaloniaui"
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys = "clr-namespace: System; assembly=netstandard">

        	<!-- Avatar Button -->
		<Style Selector="Button.user /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="transparent" />
			<Setter Property="BorderThickness" Value="3" />
			<Setter Property="CornerRadius" Value="22" />
		</Style>
		<Style Selector="Button:pointerover.user /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#fcfeff" />
			<Setter Property="Background" Value="transparent"/>
		</Style>
		<Style Selector="Button:pressed.user /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="transparent" />
			<Setter Property="Background" Value="transparent" />
		</Style>

		<!-- Sidebar Button -->
		<Style Selector="Button.sidebar">
			<Setter Property="Height" Value="40"/>
			<Setter Property="HorizontalContentAlignment" Value="Left"/>
			<Setter Property="Padding" Value="20 0 10 0"/>
			<Setter Property="Margin" Value="15 0 15 2"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="Foreground" Value="#000000" />
			<Setter Property="Background" Value="#ffffff" />
			<Setter Property="BorderBrush" Value="#ffffff" />
		</Style>
		<Style Selector="Button.sidebar /template/ ContentPresenter">
			<Setter Property="CornerRadius" Value="5"/>
		</Style>
		<Style Selector="Button:pointerover.sidebar /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#eff0f1" />
			<Setter Property="Background" Value="#eff0f1" />
		</Style>
		<Style Selector="Button:pressed.sidebar /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#f4f3f8" />
			<Setter Property="Background" Value="#f4f3f8" />
		</Style>
		<Style Selector="Button:disabled.sidebar /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#f4f3f8" />
			<Setter Property="Background" Value="#f4f3f8" />
		</Style>

		<!-- Search Button -->
		<Style Selector="Button.search">
			<Setter Property="Background" Value="#e6e5ea" />
		</Style>
		<Style Selector="Button.search /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#e6e5ea" />
			<Setter Property="CornerRadius" Value="4"/>
		</Style>
		<Style Selector="Button:pointerover.search /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#cfced6" />
			<Setter Property="Background" Value="#cfced6" />
		</Style>
		<Style Selector="Button:pressed.search /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#c3c1c9" />
			<Setter Property="Background" Value="#c3c1c9" />
		</Style>

		<!-- My Products Button -->
		<Style Selector="Button.products">
			<Setter Property="Background" Value="#f8b400" />
			<Setter Property="Foreground" Value="#ffffff"/>
		</Style>
		<Style Selector="Button.products /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#f8b400" />
			<Setter Property="CornerRadius" Value="3"/>
		</Style>
		<Style Selector="Button:pointerover.products /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#edaf09" />
			<Setter Property="Background" Value="#edaf09" />
		</Style>
		<Style Selector="Button:pressed.products /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#f8b400" />
			<Setter Property="Background" Value="#f8b400" />
		</Style>

		<!-- Chat Button -->
		<Style Selector="Button.chat">
			<Setter Property="Background" Value="#5c636e" />
			<Setter Property="Foreground" Value="#ffffff"/>
		</Style>
		<Style Selector="Button.chat /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#5c636e" />
			<Setter Property="CornerRadius" Value="3"/>
		</Style>
		<Style Selector="Button:pointerover.chat /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#222831" />
			<Setter Property="Background" Value="#222831" />
		</Style>
		<Style Selector="Button:pressed.chat /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#5c636e" />
			<Setter Property="Background" Value="#5c636e" />
		</Style>

		<!-- Product Card Button -->
		<Style Selector="Button.productcard">
			<Setter Property="Background" Value="#ffffff" />
			<Setter Property="BorderBrush" Value="#ffffff" />
		</Style>
		<Style Selector="Button.productcard /template/ ContentPresenter">
			<Setter Property="CornerRadius" Value="7"/>
		</Style>
		<Style Selector="Button:pointerover.productcard /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#f4f3f8" />
			<Setter Property="Background" Value="#f4f3f8" />
		</Style>
		<Style Selector="Button:pressed.productcard /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#fafafb" />
			<Setter Property="Background" Value="#fafafb" />
		</Style>

		<!-- Main action Button -->
		<Style Selector="Button.action">
			<Setter Property="Background" Value="#ffffff" />
			<Setter Property="BorderBrush" Value="#167efb" />
			<Setter Property="Foreground" Value="#167efb" />
		</Style>
		<Style Selector="Button.action /template/ ContentPresenter">
			<Setter Property="CornerRadius" Value="20"/>
		</Style>
		<Style Selector="Button:pointerover.action /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#167efb" />
			<Setter Property="Background" Value="#ebefff" />
		</Style>
		<Style Selector="Button:pressed.action /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#167efb" />
			<Setter Property="Background" Value="#e1e6f7" />
		</Style>

		<!-- Send Message Button -->
		<Style Selector="Button.message">
			<Setter Property="Background" Value="#167efb" />
			<Setter Property="BorderBrush" Value="#ffffff" />
			<Setter Property="Foreground" Value="#ffffff" />
		</Style>
		<Style Selector="Button.message /template/ ContentPresenter">
			<Setter Property="CornerRadius" Value="25"/>
		</Style>
		<Style Selector="Button:pointerover.message /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#1176f1" />
			<Setter Property="Background" Value="#1176f1" />
		</Style>
		<Style Selector="Button:pressed.message /template/ ContentPresenter">
			<Setter Property="BorderBrush" Value="#0f70e6" />
			<Setter Property="Background" Value="#0f70e6" />
		</Style>
		
		<!-- Add Photo Button -->
		<Style Selector="Button.AddPhoto">
			<Setter Property="Background" Value="#f9f9f9" />
			<Setter Property="BorderBrush" Value="#167efb" />
		</Style>
		
		<!-- Remove Photo Button -->
		<Style Selector="Button.AddPhoto">
			<Setter Property="Background" Value="#f9f9f9" />
			<Setter Property="BorderBrush" Value="#167efb" />
		</Style>

		
		<!-- ELEMENTS -->
		<Style Selector="Grid.Main">
			<Setter Property="Background" Value="#ffffff" />
		</Style>

		<!-- Main Toolbar -->
		<Style Selector="Grid.ToolBar">
			<Setter Property="Background" Value="#f4f3f8" />
		</Style>

		<Style Selector="TextBlock.H1">
			<Setter Property="Foreground" Value="#000000" />
		</Style>

		<Style Selector="RadioButton.H1">
			<Setter Property="Foreground" Value="#000000" />
		</Style>

		<Style Selector="TextBlock.H2">
			<Setter Property="Foreground" Value="#9e9ea5" />
		</Style>

		<Style Selector="Path.H2">
			<Setter Property="Fill" Value="#9e9ea5" />
		</Style>

		<Style Selector="Path.InactiveStar">
			<Setter Property="Fill" Value="#FFECECEC" />
		</Style>

		<Style Selector="Border.SearchBar">
			<Setter Property="BorderBrush" Value="#e6e5ea" />
			<Setter Property="Background" Value="#e6e5ea" />
		</Style>

		<Style Selector="TextBox.SearchBar">
			<Setter Property="Foreground" Value="#606060" />
			<Setter Property="Background" Value="#e6e5ea" />
		</Style>

		<!-- Status Bar -->
		<Style Selector="Border.StatusBar">
			<Setter Property="BorderBrush" Value="#ebefff" />
			<Setter Property="Background" Value="#ebefff" />
		</Style>

		<Style Selector="Path.StatusBarIconGreen">
			<Setter Property="Fill" Value="#79d70f" />
		</Style>

		<Style Selector="Path.StatusBarIconInactive">
			<Setter Property="Fill" Value="#e6e5ea" />
		</Style>

		<Style Selector="Path.StatusBarIconRed">
			<Setter Property="Fill" Value="#ff2400" />
		</Style>

		<Style Selector="Border.StatusBarIconRed">
        	<Setter Property="Background" Value="#ff2400" />
    	</Style>

		<Style Selector="Path.StatusBarIconOrange">
			<Setter Property="Fill" Value="#ff9234" />
		</Style>

		<Style Selector="TextBlock.StatusBarText">
			<Setter Property="Foreground" Value="#606060" />
		</Style>

		<Style Selector="Separator.SideBarSeparator">
			<Setter Property="Background" Value="#eff0f1" />
		</Style>

		<Style Selector="Path.BlueIcon">
			<Setter Property="Fill" Value="#167efb" />
		</Style>
		
		<Style Selector="Path.WhiteIcon">
			<Setter Property="Fill" Value="#ffffff" />
		</Style>

		<Style Selector="TextBox.TextBoxBackground">
			<Setter Property="Background" Value="#f9f9f9" />
		</Style>

		<Style Selector="ComboBox.TextBoxBackground">
			<Setter Property="Background" Value="#f9f9f9" />
		</Style>
		
		<Style Selector="Border.PhotoPlaceholder">
			<Setter Property="BorderBrush" Value="#e6e5ea" />
			<Setter Property="Background" Value="#e6e5ea" />
		</Style>
		
		<Style Selector="Border.Notification">
			<Setter Property="Background" Value="Orange" />
		</Style>
		
		<Style Selector="Border.IncomingChatMessage">
			<Setter Property="Background" Value="#f9f6f7" />
		</Style>
		
		<Style Selector="Border.OutcomingChatMessage">
			<Setter Property="Background" Value="#dee0d9" />
		</Style>
		
		<Style Selector="Border.ReplyTextbox">
			<Setter Property="BorderBrush" Value="#848d95" />
			<Setter Property="Background" Value="#ffffff" />
		</Style>
		
		<Style Selector="Path.SideBarIcon">
			<Setter Property="Fill" Value="#4E5C6E" />
		</Style>
	  
	  <Style Selector="Border.SideBarIcon">
			<Setter Property="Background" Value="#4E5C6E" />
		</Style>

</Styles>