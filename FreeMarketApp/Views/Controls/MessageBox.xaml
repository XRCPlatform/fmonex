<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FreeMarketApp.Views.Controls.MessageBox" SizeToContent="WidthAndHeight" CanResize="False"
        HasSystemDecorations="False" WindowStartupLocation="CenterOwner">
  
    <Border MaxWidth="550" BorderThickness="1" BorderBrush="Black" Padding="20">
        <StackPanel HorizontalAlignment="Center">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" Name="Title" FontSize="20" FontWeight="Bold"/>
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" Name="Text" FontSize="14" Margin="0,10,0,20" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Name="Buttons">
                <StackPanel.Styles>
                  <Style Selector="Button">
                    <Setter Property="Margin" Value="7 3"/>
				    <Setter Property="FontSize" Value="14"/>
                  </Style>
                </StackPanel.Styles>
            </StackPanel>
        </StackPanel>
    </Border>

</Window>