<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FreeMarketApp.Views.Controls.MessageBox" SizeToContent="WidthAndHeight" CanResize="False"
        HasSystemDecorations="False" WindowStartupLocation="CenterOwner">
  <Border Background="White"
        BorderBrush="Black"
        BorderThickness="1"
        CornerRadius="0"
        Padding="15">
    <StackPanel HorizontalAlignment="Center">
      <TextBlock HorizontalAlignment="Left" Name="Title" FontSize="18" FontWeight="Bold"/>
      <TextBlock HorizontalAlignment="Left" Name="Text" Margin="0,10,0,20" />
      <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Name="Buttons">
        <StackPanel.Styles>
          <Style Selector="Button">
            <Setter Property="Margin" Value="3"/>
          </Style>
        </StackPanel.Styles>

      </StackPanel>
    </StackPanel>
  </Border>
</Window>