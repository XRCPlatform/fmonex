<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FreeMarketApp.ViewModels;assembly=FreeMarketApp"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FreeMarketApp.Views.MainWindow"
        Icon="/Assets/freemarket.ico"
        Title="Free Market One">
  
  <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <StackPanel Orientation="Vertical">
    <StackPanel Orientation="Horizontal">
      <StackPanel Margin="18" Spacing="4" Width="200">
        <TextBlock FontSize="16" Text="Simple Bindings"/>
      </StackPanel>
      <StackPanel Margin="18" Spacing="4" Width="200">
        <TextBlock Name="testblock" Text="{Binding Caption}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Name="testblockx" Text="{Binding Caption}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Command="{Binding ShuffleItems}">Shuffle</Button>
      </StackPanel>
    </StackPanel>
    </StackPanel>
      
</Window>
