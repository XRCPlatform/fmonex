                <TextBlock Text="Description" Margin="20 40 0 0" FontSize="16" FontWeight="Bold"/>
                <TextBox AcceptsReturn="True" Watermark="Describe your listing" Height="200" BorderThickness="0" Padding="10" TextWrapping="Wrap" Background="#f9f9f9" Margin="20 5 20 0" FontSize="16"/>

                <TextBlock Text="Photos" Margin="20 30 0 0" FontSize="16" FontWeight="Bold"/>
