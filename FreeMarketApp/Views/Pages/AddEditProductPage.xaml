                        <ComboBoxItem Padding="7" Content="Gold"/>
                        <ComboBoxItem Padding="7" Content="Silver"/>
                        <ComboBoxItem Padding="7" Content="Platinum"/>
                        <ComboBoxItem Padding="7" Content="Rhodium"/>
                        <ComboBoxItem Padding="7" Content="Palladium"/>
                        <ComboBoxItem Padding="7" Content="Rare Coins"/>
                        <ComboBoxItem Padding="7" Content="Copper"/>
                        <ComboBoxItem Padding="7" Content="Other"/>
                    </ComboBox>
                </VirtualizingStackPanel>

                <TextBlock Text="Type" Margin="20 30 20 0" FontSize="16" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="20 10 20 0">
                    <RadioButton Content="Physical good" IsDefault="True" IsChecked="True" FontSize="16" Margin="0 0 20 0" ></RadioButton>
                    <RadioButton Content="Service" FontSize="16"></RadioButton>
                </StackPanel>

                <TextBlock Text="Title" Margin="20 30 0 0" FontSize="16" FontWeight="Bold"/>
