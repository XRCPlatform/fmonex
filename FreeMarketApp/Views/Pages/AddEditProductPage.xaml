                    </Button>



                </WrapPanel>

                <TextBlock Text="Shipping" Margin="20 30 20 0" FontSize="16" FontWeight="Bold"/>
                <TextBox AcceptsReturn="True" HorizontalAlignment="Left" Padding="10" Watermark="USA shipping, International etc." Width="300" BorderThickness="0" TextWrapping="Wrap" Background="#f9f9f9" Margin="20 5 20 0" FontSize="16"/>

                <TextBlock Text="Price" Margin="20 30 20 0" FontSize="16" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="20 -5 0 0">
                    <TextBox AcceptsReturn="True" HorizontalAlignment="Left" Padding="10" Width="120" BorderThickness="0" TextWrapping="Wrap" Background="#f9f9f9" Margin="0 10 10 0" FontSize="16"/>
                    <VirtualizingStackPanel>
                        <ComboBox SelectedIndex="0" BorderThickness="0" Background="#f9f9f9" FontSize="16" Margin="0 10 50 0" Padding="10" Width="100" HorizontalAlignment="Left">
                            <ComboBoxItem Padding="7" Content="XRC"/>
                            <ComboBoxItem Padding="7" Content="USD"/>
                        </ComboBox>
                    </VirtualizingStackPanel>
                </StackPanel>

                <DockPanel Margin="20 50 50 0">
                    <Button DockPanel.Dock="Right" Classes="message" Foreground="#ffffff" FontSize="16" Margin="0 30 0 0" Height="40" Padding="50 0 50 0" >Save</Button>
                    <Button Classes="action" BorderThickness="0" HorizontalAlignment="Right" Width="120" Foreground="#167efb" FontSize="16" Margin="0 30 10 0" Click="ButtonCancel_Click" Cursor="Hand">Cancel</Button>
                </DockPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
