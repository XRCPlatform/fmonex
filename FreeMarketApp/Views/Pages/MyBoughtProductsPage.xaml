                        </WrapPanel>                   
                                                              
                      </DockPanel>
                    </Button>
                    <!-- End of product card -->

                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>

            </StackPanel>
        </ScrollViewer>
