<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FreeMarketApp.Views.Pages.MyProductsPage">

    <Grid Margin="0" Background="White">
         <!-- SIDEBAR -->
        <ScrollViewer HorizontalAlignment="Left" Margin="0,0,0,0" Width="250">
            <StackPanel x:Name="SideBar" Orientation="Vertical">
                <Button x:Name="BackButton" Classes="action" HorizontalAlignment="Left" Height="36" Margin="20,20,0,0" VerticalAlignment="Top" Width="210" VerticalContentAlignment="Center" BorderThickness="1" Foreground="#167efb" Click="ButtonBack_Click" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M408,178.5H96.9L239.7,35.7L204,0L0,204l204,204l35.7-35.7L96.9,229.5H408V178.5z" HorizontalAlignment="Left" Height="14" Stretch="Fill" Width="15" Fill="#167efb"/>
                        <TextBlock HorizontalAlignment="Center" Margin="10,0,0,0" FontSize="14" Text="Go back"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </ScrollViewer>
        <Separator Width="1" HorizontalAlignment="Left"	VerticalAlignment="Stretch"	Background="#eff0f1" Margin="250 0 0 0"/>


        <!-- CONTENT AREA -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="250 0 0 0">
            <StackPanel HorizontalAlignment="Stretch">
                <WrapPanel Orientation="Horizontal" Margin="20 20 20 10">
                    <TextBlock Text="My Listings" TextWrapping="Wrap" FontSize="28" Margin="0 0 25 0" FontWeight="Bold" Foreground="#606060"/>
                    <Button Classes="action" BorderThickness="0" Height="24" VerticalAlignment="Center" VerticalContentAlignment="Center" Padding="10 0 10 0" Background="#f6f7f8" Foreground="#167efb" Click="ButtonAdd_Click" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="m408 184h-136c-4.417969 0-8-3.582031-8-8v-136c0-22.089844-17.910156-40-40-40s-40 17.910156-40 40v136c0 4.417969-3.582031 8-8 8h-136c-22.089844 0-40 17.910156-40 40s17.910156 40 40 40h136c4.417969 0 8 3.582031 8 8v136c0 22.089844 17.910156 40 40 40s40-17.910156 40-40v-136c0-4.417969 3.582031-8 8-8h136c22.089844 0 40-17.910156 40-40s-17.910156-40-40-40zm0 0"
								  HorizontalAlignment="Left" Height="13" Stretch="Fill" Width="13" Fill="#167efb"/>
                            <TextBlock Margin="7,0,0,0" Text="Add new" FontSize="13"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>

                <!-- Product card -->
                <Grid>
                    <Button Margin="10 0 65 10" HorizontalContentAlignment="Left" Height="140" Classes="productcard" Cursor="Hand" Click="ButtonProduct_Click">
                        <DockPanel HorizontalAlignment="Stretch" LastChildFill="true">
                            <Border BorderBrush="#e6e5ea" Width="200" Height="120" Margin="5 10 10 10" Background="#e6e5ea" BorderThickness="0">
                                <Image DockPanel.Dock="Left" Source="{Binding ProductImage}" Stretch="UniformToFill" >
                                    <Image.Clip>
                                        <RectangleGeometry Rect="0,0,200,120" />
                                    </Image.Clip>
                                </Image>
                            </Border>
                            <TextBlock DockPanel.Dock="Top" TextWrapping="Wrap" HorizontalAlignment="Stretch" Height="50" FontSize="18" Margin="0 5 10 0" Text="2017 1 oz Proof Mississippi Choctaw Water Moccasin Silver Coin"></TextBlock>
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                                <TextBlock  FontSize="12" Foreground="Gray" Text="Shipping: "></TextBlock>
                                <TextBlock  FontSize="12" Foreground="Gray" Text="Worldwide"></TextBlock>
                            </StackPanel>
                            <TextBlock DockPanel.Dock="Top" Margin="0 4 0 0" FontSize="18" FontWeight="Medium" Text="$185"></TextBlock>
                            <TextBlock DockPanel.Dock="Top" FontSize="14" Foreground="Gray" Text="5.3 XRC"></TextBlock>
                        </DockPanel>
                    </Button>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 20 10">
                        <Button Classes="action" BorderThickness="0" Width="36" Height="36" Margin="0 0 0 5" Click="ButtonEdit_Click" Cursor="Hand">
                            <Path Data="m114.6875 284.675781-73.800781-73.800781 178.5-178.5 73.800781 73.800781zm-80.699219-60.800781 67.699219 67.699219-101.5 33.800781zm281.898438-140.300781-12.800781 12.800781-73.898438-73.898438 12.800781-12.800781c12.894531-12.902343 33.804688-12.902343 46.699219 0l27.199219 27.199219c12.800781 12.9375 12.800781 33.765625 0 46.699219zm0 0"
								  HorizontalAlignment="Left" Height="15" Stretch="Fill" Width="15" Fill="#167efb"/>
                        </Button>
                        <Button Classes="action" BorderThickness="0" Width="36" Height="36" Click="ButtonRemove_Click" Cursor="Hand">
                            <Path Data="m415.402344 495.421875-159.40625-159.410156-159.40625 159.410156c-22.097656 22.09375-57.921875 22.09375-80.019532 0-22.09375-22.097656-22.09375-57.921875 0-80.019531l159.410157-159.40625-159.410157-159.40625c-22.09375-22.097656-22.09375-57.921875 0-80.019532 22.097657-22.09375 57.921876-22.09375 80.019532 0l159.40625 159.410157 159.40625-159.410157c22.097656-22.09375 57.921875-22.09375 80.019531 0 22.09375 22.097657 22.09375 57.921876 0 80.019532l-159.410156 159.40625 159.410156 159.40625c22.09375 22.097656 22.09375 57.921875 0 80.019531-22.097656 22.09375-57.921875 22.09375-80.019531 0zm0 0"
								  HorizontalAlignment="Left" Height="13" Stretch="Fill" Width="13" Fill="#167efb"/>
                        </Button>
                    </StackPanel>
                </Grid>
                <!-- End of product card -->


            </StackPanel>
        </ScrollViewer>
</Grid>
</UserControl>
